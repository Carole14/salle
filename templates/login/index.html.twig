{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<section class="form-signin">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>connectez-vous </h1>

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" autocomplete="username" required autofocus/>

        <label for="password" class= "password">Mot de passe</label>
        <input type="password" id="password" name="_password" autocomplete="current-password" required/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

         <input type="hidden" name="_target_path" value="{{ path('app_login') }}"/>
        <button class = "button" type="submit">Se connecter</button>
    </form>
</section>
{% endblock %}
